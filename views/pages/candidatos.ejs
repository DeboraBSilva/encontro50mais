<%- include('../header') -%>
<div
  class="w-full max-w-2xl"
  style="margin-left: auto; margin-right: auto; padding-top: 50px"
>
  <span class="text-2xl">Candidatos</span> 
  <ul class="w-48 mt-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
    <!-- comeÃ§a aqui mostrar os candidatos -->
    <% pessoas.forEach(candidato => { %>
      <li class="w-full px-4 py-2 border-b border-gray-200 rounded-t-lg dark:border-gray-600">
        <a class="hover:underline" href="/candidato?id=<%= candidato.idPessoa %>"><span class="text-lg"><%= candidato.nome %></span></a>
      </li>
    <% }) %>
    <!-- termina aqui -->
  </ul>
</div>
<footer class="text-gray-600">
  <div class="container px-5 py-8 mx-auto flex items-center justify-center sm:flex-row flex-col">
    <span class="ml-3">Encontro50+</span>
  </div>
</footer>
</body>

</html>
