<%- include('header') -%>
<main>
  <div role="alert">
    <div
      class="border border-t-0 0 rounded-b px-4 py-3"
      style="color: white; background-color: darkorange"
    >
      Atenção
    </div>
    <div
      class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700"
    >
      <p><%= mensagem %></p>
    </div>
  </div>
  <div
    class="w-full max-w-xs"
    style="margin-left: auto; margin-right: auto; padding-top: 50px"
  >
    <form
      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      action="/login"
      method="post"
    >
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="titulo">
          Entre com o email
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="email"
          id="email"
          type="email"
          autofocus
        />
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="password"
        >
          Entre com a Senha
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="password"
          id="password"
          type="password"
        />
      </div>

      <div class="flex items-center justify-between">
        <button
          class="text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:focus:ring-yellow-900"
          style="background-color: darkorange"
          type="submit"
        >
          Enviar
        </button>
      </div>
    </form>
  </div>
</main>

<%- include('footer') -%>
