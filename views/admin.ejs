<%- include('header') -%>
<div
  class="w-full max-w-4xl"
  style="margin-left: auto; margin-right: auto; padding-top: 50px"
>
  <button
    class="inline-flex items-center bg-indigo-500 text-white border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 mb-4 md:mt-0"
    type="button"
    id="btnAnterior"
  >
    <a href="/novaPergunta">Nova Pergunta</a>
  </button>

  <table class="border w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="border px-6 py-3">ID</th>
        <th scope="col" class="border px-6 py-3">Ordem</th>
        <th scope="col" class="border px-6 py-3">Descrição</th>
        <th scope="col" class="border px-6 py-3">Tipo</th>
        <th scope="col" class="border px-6 py-3">
          <span class="border sr-only">Editar</span>
        </th>
        <th scope="col" class="border px-6 py-3">
          <span class="border sr-only">Excluir</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <!-- começa aqui mostrar as perguntas -->
      <% perguntas.forEach( pergunta=> { %>
      <tr class="border dark:bg-gray-800 dark:border-gray-700 odd:bg-white even:bg-gray-50 odd:dark:bg-gray-800 even:dark:bg-gray-700">
        <th scope="row" class="border px-6 py-4 text-center"><%= pergunta.idPergunta %></th>
        <td class="border px-6 py-4 text-center"><%= pergunta.ordem %></td>
        <td class="border px-6 py-4"><%= pergunta.descricao %></td>
        <td class="border px-6 py-4 text-center"><%= pergunta.tipo %></td>
        <td class="border px-6 py-4 text-right">
          <a
            class="text-indigo-500 font-bold hover:underline"
            href="/novaPergunta?id=<%= pergunta.idPergunta %>"
            >Editar</a
          >
        </td>
        <td class="border px-6 py-4 text-right">
          <button type="button" 
            class="text-red-600 font-bold hover:underline" 
            onclick="excluirPergunta(<%= pergunta.idPergunta %>)">
            Excluir
          </button>
        </td>
      </tr>
      <% }) %>
      <!-- termina aqui -->
    </tbody>
  </table>
</div>
<footer class="text-gray-600">
  <div class="container px-5 py-8 mx-auto flex items-center justify-center sm:flex-row flex-col">
    <span class="ml-3">Encontro50+</span>
  </div>
</footer>

<script src="/assets/js/admin.js"></script>
</body>

</html>

